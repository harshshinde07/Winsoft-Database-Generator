<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" stylesheets="@../utils/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.main.Controller">
    <children>
        <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="376.0" prefWidth="490.0" styleClass="custom-pane" stylesheets="@../utils/dark-theme.css">
            <children>
                <VBox prefHeight="153.0" prefWidth="404.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <JFXTextField fx:id="id" labelFloat="true" promptText="Customer ID">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="name" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Customer Name">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="branchCode" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Branch Code">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="branch" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Branch Name">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="password" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Password">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                            <children>
                                <JFXButton fx:id="saveButton" onAction="#createDB" prefHeight="66.0" prefWidth="100.0" text="Create" />
                                <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0" text="Cancel" />
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
